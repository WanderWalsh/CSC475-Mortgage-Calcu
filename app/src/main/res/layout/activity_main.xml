<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="25dp"
    android:layout_marginVertical="50dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/yearsSeekBar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="117dp"
        android:max="30"
        android:min="1"
        android:progress="15" />

    <TextView
        android:id="@+id/yearsTextView"
        android:layout_width="143dp"
        android:layout_height="54dp"
        android:layout_above="@+id/yearsSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="-14dp"
        android:gravity="center"
        android:text="@string/year"
        android:textSize="30sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/yearTextView"
        android:layout_width="107dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-49dp"
        android:layout_marginBottom="168dp"
        android:layout_toStartOf="@+id/yearsTextView"
        android:gravity="center"
        android:text="@string/years"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/mortgageTextView"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/totalEditText"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="439dp"
        android:gravity="center"
        android:hint="@string/enter_amount"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textSize="25sp"
        tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/rateTextView"
        android:layout_width="109dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="247dp"
        android:layout_toStartOf="@+id/rateEditText"
        android:gravity="center"
        android:text="@string/interest_rate"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/rateEditText"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="255dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/enter_amount"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textSize="25sp"
        tools:ignore="SpeakableTextPresentCheck,TextContrastCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/paymentEditText"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="342dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/enter_amount"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textSize="25sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/paymentTextView"
        android:layout_width="97dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="353dp"
        android:layout_toStartOf="@+id/paymentEditText"
        android:gravity="center"
        android:text="@string/down_payment"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="100dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="442dp"
        android:layout_toStartOf="@+id/totalEditText"
        android:gravity="center"
        android:text="@string/total"
        android:textSize="23sp" />

</RelativeLayout>